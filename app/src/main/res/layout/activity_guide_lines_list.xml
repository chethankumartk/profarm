<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eaeaea"
    android:orientation="vertical"
    tools:context=".CropGuidelines.GuideLinesListActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/backgrn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/antioxy"
            android:fitsSystemWindows="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow" />



        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow1" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow" />



        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/shadow"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/searchbackground"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/searchadvance"
                        android:layout_marginBottom="10dp"

                        >
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/searchblack"
                            />


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="40dp"
                            android:textColor="#777777"
                            android:hint="Search..."
                            android:maxLines="1"
                            android:id="@+id/searchmadakkeedittext"
                            android:textSize="16dp"
                            android:textColorHint="#777777"
                            android:background="@drawable/searchbackground"

                            />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:tint="#777777"
                            android:id="@+id/voicee"
                            android:layout_marginRight="7dp"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/ic_keyboard_voice_black_24dp" />

                    </RelativeLayout>


                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.AppBarLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchrecycle"
                android:layoutAnimation="@anim/recyclelayoutanim"
                >

            </android.support.v7.widget.RecyclerView>


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycl"
                android:layoutAnimation="@anim/recyclelayoutanim"
                >

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>




    </FrameLayout>


</LinearLayout>