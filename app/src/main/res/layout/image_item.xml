<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"


    app:cardCornerRadius="3dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    android:clipToPadding="false"
    android:clipChildren="false"
    card_view:cardElevation="0dp"


    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#efefef"
            android:orientation="vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:id="@+id/cropmel"
                android:textColor="#616161"
                android:background="@drawable/cropnamedhu"
                android:layout_height="20dp"
                />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"


            app:cardCornerRadius="06dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="true"
            android:clipToPadding="false"
            android:clipChildren="false"
            card_view:cardElevation="10dp"


            app:cardPreventCornerOverlap="false"

            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_view_upload"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="match_parent" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow"/>
            </FrameLayout>

        </android.support.v7.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#efefef"
                android:orientation="horizontal"
                >

            <LinearLayout
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient3"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="50dp"
                    android:layout_height="20dp"

                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/chenagkanakke"
                    android:gravity="center"
                    android:text="Rs/."
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:typeface="monospace" />


                <TextView


                    android:layout_width="50dp"
                    android:forceHasOverlappingRendering="true"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/welcomeback"
                    android:gravity="center"
                    android:text="Name"
                    android:id="@+id/price"
                    android:hint="price"
                    android:textColor="#058e3f"
                    android:textSize="15sp"
                    android:typeface="monospace" />


            </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/update"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:background="@drawable/etback"
                        android:clickable="true"


                        android:focusable="true"
                        android:gravity="center"
                        android:text="update"
                        android:textAllCaps="false"
                        android:textColor="#058e3f"
                        android:textSize="12sp"
                        android:layout_alignParentRight="true" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/gradient4"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="FarmerName"
                        android:typeface="monospace"
                        android:textColor="#666666"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="CropName"
                        android:typeface="monospace"
                        android:textColor="#666666"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="Phone"
                        android:typeface="monospace"
                        android:textColor="#666666"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="Address"
                        android:typeface="monospace"
                        android:textColor="#666666"
                        />




                </LinearLayout>
                <View
                    android:layout_marginLeft="10dp"
                    android:layout_width="1dp"
                    android:background="#d3d3d3"
                    android:layout_height="130dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/raithaname"
                        android:hint="farmername"
                        android:typeface="monospace"
                        android:textColor="#666666"
                        />

                    <TextView
                        android:id="@+id/raithacrop"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:typeface="monospace"
                        android:textColor="#666666"
                        android:hint="cropname" />

                    <TextView
                        android:id="@+id/text_view_name"
                        android:clickable="true"
                        android:focusable="true"

                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:typeface="monospace"
                        android:hint="phone"
                        android:textColor="#666666" />



                    <TextView
                        android:id="@+id/raithaaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="4"
                        android:lines="5"
                        android:typeface="monospace"
                        android:textColor="#666666"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."

                        android:hint="address" />


                </LinearLayout>





            </LinearLayout>





        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>